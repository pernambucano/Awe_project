<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector">


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnailLR"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/titleLR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnailLR"
        android:layout_toRightOf="@+id/thumbnailLR"
        android:textSize="@dimen/title"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="5dp"/>


    <TextView
        android:id="@+id/ratingLR"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleLR"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnailLR"
        android:textSize="@dimen/rating" />


    <TextView
        android:id="@+id/genreLR"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingLR"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/thumbnailLR"
        android:textColor="@color/genre"
        android:textSize="@dimen/genre" />


    <TextView
        android:id="@+id/durationLR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/duration"
        android:textSize="@dimen/duration"
        android:paddingBottom="10dp"
        android:paddingRight="5dp"/>


</RelativeLayout>